{
	"tasks": {
		"dev": "deno run -A --watch=static/,routes/ dev.ts",
		"lint": "deno lint && deno fmt"
	},
	"importMap": "import_map.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"lint": {
		"files": {
			"exclude": [
				"**/static/**"
			]
		},
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"files": {
			"exclude": [
				"**/static/**"
			]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve",
			"semiColons": true,
			"lineWidth": 80
		}
	}
}
